<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.training.empoz">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.0.0"
            tools:replace="android:value" />

        <activity android:name=".activity.EmployeeLogin" />
        <activity android:name=".activity.OrganizationHome" />
        <activity android:name=".activity.DepartmentHome" />
        <activity android:name=".activity.EmployeHome" />
        <activity android:name=".activity.EmployeeProfile" />
        <activity android:name=".activity.EmployeeList" />
        <activity android:name=".UserRegistration" />
        <activity android:name=".DepartmentLeaveRequest"></activity>
    </application>

</manifest>